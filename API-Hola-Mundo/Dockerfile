FROM node:16

# CREA UN DIRECTORIO DENTRO DE LA IMAGEN Y GUARDA EL CONTENIDO DE LA APLICACION
WORKDIR /app

# COPIO LOS package*.json EN LA RAIZ
COPY package*.json /app/

# EJECUTO EL COMANDO "npm install" PARA INSTALAR LAS DEPENDENCIAS QUE SE REQUIEREN
RUN npm install

# COPIO LA API AL DIRECTORIO DE TRABAJO
COPY . /app/

# DIGO EL PUERTO POR EL QUE SE PUEDE ACCEDER A LA API
EXPOSE 9000

# EJECUTO LA API
CMD [ "node", "app.js"]